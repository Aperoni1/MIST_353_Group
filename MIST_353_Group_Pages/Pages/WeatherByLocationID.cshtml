@page
@model MIST_353_Group_Pages.Pages.WeatherByLocationIDModel
@{
    ViewData["Title"] = "Weather by Location ID";
}

<h1>Weather by Location ID</h1>

<form method="get">
    <label for="locationID">Enter location ID:</label>
    <input type="text" id="locationID" name="locationID" />
    <button type="submit">Search</button>
</form>

@if (ViewData["WeatherData"] != null)
{
    var weather = ViewData["WeatherData"] as MIST_353_Group_API.Entities.Weather;
    <div>
        <h2>Weather Details</h2>
        <p>Temperature: @weather.Temperature</p>
        <p>Humidity: @weather.Humidity</p>
        <!-- Add more weather details as needed -->
    </div>
}
